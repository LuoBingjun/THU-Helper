<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="身份信息">

        <EditTextPreference
            app:enabled="false"
            app:key="username"
            app:title="用户名"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:enabled="false"
            app:key="email"
            app:title="电子邮箱"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="用户资料">

        <EditTextPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:key="nickname"
            app:title="昵称"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:key="phone"
            app:title="电话"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>